<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignInController">
   <children>
      <AnchorPane layoutY="-7.0" prefHeight="484.0" prefWidth="571.0">
         <children>
            <Label layoutX="183.0" layoutY="52.0" text="Sign In">
               <font>
                  <Font name="System Bold" size="63.0" />
               </font>
            </Label>
            <TextField fx:id="tfUser" layoutX="167.0" layoutY="190.0" prefHeight="38.0" prefWidth="239.0" promptText="Username">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="tfPswd" layoutX="166.0" layoutY="256.0" prefHeight="38.0" prefWidth="239.0" promptText="Password">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Button fx:id="btnSignIn" layoutX="167.0" layoutY="328.0" mnemonicParsing="false" onAction="#SignIn" prefHeight="53.0" prefWidth="98.0" text="Log in">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="BtnSignUp" layoutX="308.0" layoutY="328.0" mnemonicParsing="false" onAction="#BtnSignUp" prefHeight="53.0" prefWidth="98.0" text="Sign Up">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
